{
  "name": "mysql-sync",
  "displayName": "MySQL Sync",
  "description": "同步本地 MySQL 数据库到远程服务器",
  "version": "0.0.4",
  "publisher": "pengcunfu",
  "icon": "icon_mysql.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengcunfu/vscode-mysql-sync.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mysql-sync.syncDatabase",
    "onCommand:mysql-sync.generateConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mysql-sync.syncDatabase",
        "title": "MySQL Sync: 同步数据库到远程服务器"
      },
      {
        "command": "mysql-sync.generateConfig",
        "title": "MySQL Sync: 生成配置文件"
      }
    ],
    "configuration": {
      "title": "MySQL Sync",
      "properties": {
        "mysql-sync.configPath": {
          "type": "string",
          "default": ".vscode/.mysql-sync.json",
          "description": "MySQL 同步配置文件路径"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "mysql2": "^3.6.0"
  }
}

